<div class="row no-gutters">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h5 class="text-dark bg-light p-4 mb-0">新規投稿フォーム</h5>
    <div class="form-body p-4">
      <%= form_with model: @post do |f| %>
        <h4>見出し</h4>
        <%= f.text_field :titlename, class: "form-control" %>

        <h4>現場画像</h4>
        <%= f.file_field :image, accept: "image/*", class: "form-control" %>

        <h4>所在地</h4>
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { include_blank: "--選択してください--" }, { class: "form-control" } %>

        <h4>本文</h4>
        <%= f.text_area :postcontent, class: "form-control", rows: "7" %>
        
        <h4>タグ</h4>
        <%= f.collection_select :workout_tag_id, WorkoutTag.all, :id, :name, { include_blank: "--選択してください--" }, { class: "form-control" } %>

        <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
    </div>
  </div>
</div>